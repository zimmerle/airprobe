#!/usr/bin/make -f
# -*- makefile -*-
# Sample debian/rules that uses debhelper.
# This file was originally written by Joey Hess and Craig Small.
# As a special exception, when this file is copied by dh-make into a
# dh-make output file, you may use that output file without restriction.
# This special exception was added by Craig Small in version 0.37 of dh-make.

# Uncomment this to turn on verbose mode.
export DH_VERBOSE=1

%:
	dh $@ --with python2

override_dh_auto_configure:
	./bootstrap
	./configure --prefix=/usr

override_dh_auto_make:
	make

override_dh_auto_install:
	dh_auto_install
	mkdir -p debian/tmp/usr/bin
	#for i in `ls src/python/*.py`; do cp $$i debian/tmp/usr/bin/`basename $$i`; done;
	#for i in `ls src/python/*.sh`; do cp $$i debian/tmp/usr/bin/gsm-receiver-`basename $$i`; done;
	cp src/python/gsm_receive.py debian/tmp/usr/bin/gsm_receive.py
	cp src/python/gsm_receive100.py debian/tmp/usr/bin/gsm_receive100.py
	cp src/python/go.sh debian/tmp/usr/bin/gsm_receive-go.hs
	cp src/python/go_usrp2.sh debian/tmp/usr/bin/gsm_receive-go_usrp2.sh
	cp src/python/capture.sh debian/tmp/usr/bin/gsm_receive-capture.sh

